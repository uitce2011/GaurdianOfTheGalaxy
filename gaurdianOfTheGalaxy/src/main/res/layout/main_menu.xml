<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/uit.gaurdianofthegalaxy"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundmenu"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar"
    android:visibility="visible"
    tools:context="uit.guardianofthegalaxy.Main_Menu" >

    <TextView
        android:id="@+id/txttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="GUARDIAN OF THE GALAXY"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#800000"
        android:textSize="40dp" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center"
        android:text="PLAY"
        android:textColor="#FF0000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center"
        android:text="HIGH SCORE"
        android:textColor="#0000FF"
        android:textSize="15dp" />

    <Button
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center"
        android:text="ON/OFF MUSIC"
        android:textColor="#0000FF"
        android:textSize="15dp" />

    <Button
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center"
        android:text="HELP"
        android:textColor="#0000FF"
        android:textSize="15dp" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center"
        android:text="EXIT"
        android:textColor="#0000FF"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.29"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/share_fb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@drawable/facebookicon" />

        <Button
            android:id="@+id/share_gg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@drawable/googleplus" />

    </LinearLayout>

</LinearLayout>